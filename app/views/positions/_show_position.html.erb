<table class="table table-borderless table-hover">
  <thead>
    <tr class="border-top border-bottom border-primary">
      <% # <th class="text-primary"></th> %>
      <th class="text-primary">Position</th>
      <th class="text-primary">Vacant</th>
      <%= content_tag :th, "Min. Vote", class: "text-primary" if @event.min_vote? %>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @event.positions.each do |position| %>
      <tr>
        <% # <th scope="row">= claim_document.id</th> %>
        <td><%= position.name %></td>
        <td><%= position.vacant %></td>
        <% if @event.min_vote? %>
          <td><%= position.min_vote %></td>
        <% end %>
        <td>
          <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_position_path(position), class: "btn btn-outline-primary btn-sm", data: { turbo_frame: "remote_modal" } %>
          <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, position, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
