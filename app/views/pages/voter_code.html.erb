<div class="inner-header flex">
  <%= simple_form_for @election, url: enter_code_path(p: params[:p]), method: :post do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="col d-flex justify-content-center">
      <div class="card" style="width:600px">
        <%= image_tag 'cooptechlogo.png', width: 200, class: 'mb-2 mb-lg-0 me-2' %>
        <div class="card-body">
          <div class="form-inputs mb-5" style="text-align: center;">
            <div class="form-inputs mb-3">
              <%#= f.association :member,input_html: { data: { controller: 'ts--select' } } %>
              <%= f.input :voter_code, label: "Enter your voter code", style: "text-align= centerd" %>
              <%#= f.input :station %>
            </div>
            <div class="form-actions text-end">
              <%#= link_to "Members", members_path, class: 'btn btn-primary' %>
              <%#= link_to "Back", root_path, class: "btn btn-secondary" %>
              <%= f.button :submit, class: "btn btn-success btn-lg", value: "Vote" %>
            
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
