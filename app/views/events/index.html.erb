<%= content_tag :h1, "List of Events" %>


<div class="text-end mb-3">
  <%= link_to new_event_path, class: "btn btn-primary" do %>
    New Event
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-borderless table-hover">
    <thead>
      <tr class="border-top border-bottom border-primary">

      <th>#</th>
        <th class="text-primary">Name</th>
        <th class="text-primary">Description</th>
        <th class="text-primary">Required Complete</th>
        <th class="text-primary">Allow Single</th>
        <th class="text-primary">Active</th>
        <th class="text-primary">Election</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>

        <th scope="row"><%= event.id %></th>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.required_complete %></td>
        <td><%= event.allow_single %></td>
        <td><%= event.active %></td>
        <td><%= event.election %></td>
    
          <td>
            <%= link_to "Activate", activate_event_path(event), method: :post, class: "btn btn-success btn-sm" %>
            <%= link_to "View", event, class: "btn btn-secondary btn-sm" %>
            <%= link_to "Edit", edit_event_path(event), class: "btn btn-secondary btn-sm" %>
            <% #= link_to "Delete", event, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
