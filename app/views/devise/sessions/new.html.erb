<div class="p-5 mt-5 mb-4 bg-light rounded-3">
  <div class="row">
    <div class="col-md-7">
      <div class="container-fluid py5">
        <%= image_tag 'cooptechlogo.png', width: 300, class: 'mb-lg-0 me-2' %>
        <% @event = Event.find_by(:active => 1) %>
        <h1 class="display-6 fw-bold mb-3 mt-4"><%= @event.name unless @event.nil? %></h1>
        <p class=" fs-4"><%= @event.description unless @event.nil? %></p>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card rounded-5">
        <div class="card-header">Log in to your account</div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-inputs mb-3">
            
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions mb-3">
              <%= f.button :submit, "Log in", class: "btn-primary btn-lg" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
