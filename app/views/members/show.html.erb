

<div class="card">
  <div class="card-header">
    <h1>Member</h1>
    <%= link_to "Delete", @member, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <div class="card-body">
    <%= render @member %>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_member_path(@member), class: "btn btn-secondary btn-sm" %> |
    <%= link_to "Back", members_path, class: "btn btn-secondary btn-sm" %>
  </div>

</div>